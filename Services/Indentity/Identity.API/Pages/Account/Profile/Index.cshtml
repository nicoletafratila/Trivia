@page
@model Identity.API.Pages.Account.Profile.IndexModel
@{
    ViewData["Title"] = "Profile";
}

<h3 class="text-center">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row d-flex justify-content-center">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <input type="hidden" asp-for="Input!.ReturnUrl" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mt-3">
                <label asp-for="Username" class="form-label">User Name</label>
                <input asp-for="Username" class="form-control" disabled/>                
            </div>
            <div class="form-floating mt-3">
                <label asp-for="Input!.PhoneNumber" class="form-label"></label>
                <input asp-for="Input!.PhoneNumber" class="form-control"/>               
                <span asp-validation-for="Input!.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mt-3">
                <label asp-for="Input!.FirstName" class="form-label"></label>
                <input asp-for="Input!.FirstName" class="form-control"/>                
                <span asp-validation-for="Input!.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mt-3">
                <label asp-for="Input!.LastName" class="form-label"></label>
                <input asp-for="Input!.LastName" class="form-control"/>                
                <span asp-validation-for="Input!.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mt-3">
                <label asp-for="Input!.Email" class="form-label"></label>
                <input asp-for="Input!.Email" class="form-control"/>
                <span asp-validation-for="Input!.Email" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary mt-3">Save</button>
            <div class="mt-3">
                <p>
                    <a asp-page="/Account/ChangePassword/Index" asp-route-returnUrl="@Model!.Input!.ReturnUrl">Change password</a>
                </p>
            </div>
            <p>Click <a href="@Model!.Input!.ReturnUrl">here</a> to go back to the application.</p>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
