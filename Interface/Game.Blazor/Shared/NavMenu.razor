<div class="top-row ps-5 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Trivia Cognizant</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <div class="profile-picture">
        <img class="img-responsive" src="images/trivia-logo.jpg" />
    </div>

    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="newgame">
                        <span class="oi oi-document" aria-hidden="true"></span> Games
                    </NavLink>
                </div>
                @if ((context.User.IsInRole("admin")))
                {
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="newquestion">
                            <span class="oi oi-question-mark" aria-hidden="true"></span> New question
                        </NavLink>
                    </div>
                }
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="halloffame">
                        <span class="oi oi-badge" aria-hidden="true"></span> Hall of fame
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="history">
                        <span class="oi oi-book" aria-hidden="true"></span> History
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" @onclick="RedirectToUserProfile" style="cursor:pointer;">
                        <span class="oi oi-person " aria-hidden="true"></span> My Profile
                    </NavLink>
                </div>
                @if ((context.User.IsInRole("admin")))
                {
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="manageusers">
                            <span class="oi oi-people" aria-hidden="true"></span> Manage users
                        </NavLink>
                    </div>
                }
            </Authorized>
        </AuthorizeView>
    </nav>
</div>
