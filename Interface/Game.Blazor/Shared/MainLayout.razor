@using Game.Blazor.Services.Interfaces;

@inherits LayoutComponentBase
@implements IErrorComponent

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="layoutbar top-row px-4 auth" style="background-image: linear-gradient(150deg,#2d2d8f 10%,#006fba 50%,#21fceb 94%);">
            <LoginDisplay />
            <a href="contactus/">Contact us</a>
            <a href="about/">About</a>
        </div>

        <div class="content px-4">
            @if (IsErrorActive)
            {
                <div class="alert alert-danger alert-dismissible" style="padding-right: 16px;" role="alert">
                    <div class="row">
                        <div class="col">
                            <h3>@Title</h3>
                        </div>
                        <div class="col-auto">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close" @onclick="HideError">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    </div>
                    <div class="row">
                        <p>@Message</p>
                    </div>
                </div>
            }
            <CascadingValue Value="this" Name="ErrorComponent">
                @Body
            </CascadingValue>
        </div>
    </main>
</div>